# AI Solution Lifecycle Platform - Environment Configuration
# Copy to .env and fill in values

# Database (PostgreSQL via docker-compose)
DATABASE_URL=postgresql://lifecycle:lifecycle@localhost:5432/lifecycle

# JWT Secret (change in production)
SECRET_KEY=demo-secret-key-change-in-production

# LLM Provider: openai | anthropic | mock
LLM_PROVIDER=mock

# OpenAI (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Anthropic (required if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# LLM Settings
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
